---
interface Props {
  title: string;
  activeLink?: string;
}

import Header from "@/components/layout/dashboard/Header.astro";
import Sidebar from "@/components/layout/dashboard/Sidebar.astro";
import "@/styles/global.css";
import { ClientRouter } from "astro:transitions";

const { title, activeLink } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <ClientRouter />
  </head>
  <body class="bg-white text-gray-800 dark:bg-gray-800 dark:text-white">
    <div class="flex h-screen overflow-hidden">
      <Sidebar activeLink={activeLink} />

      <div class="flex w-0 flex-1 flex-col overflow-hidden">
        <Header />
        <main class="relative flex-1 overflow-y-auto focus:outline-none">
          <div class="px-4 py-6 sm:px-6 lg:px-8">
            <slot />
          </div>
        </main>
      </div>
    </div>
  </body>
</html>
<style></style>

---
import { Link } from "@lucide/astro";

import GitHubLogo from "@/assets/github.svg";
import ButtonLink from "@/components/ui/ButtonLink.astro";
import Layout from "@/layouts/Layout.astro";

export const prerender = true;
---

<Layout title="Shorty-link | URL SHortener">
  <div class="mx-auto mt-44 w-full max-w-4xl px-8 text-center">
    <h1 class="mb-4 text-4xl font-bold sm:text-5xl">
      The best and fastest URL shortener
    </h1>
    <p class="mb-8 text-base sm:text-xl">
      Shorty-Link is an open-source URL shortener that simplifies sharing long
      links. Intuitive, fast, and customizable.
    </p>

    <div class="flex flex-col items-center justify-center gap-4 sm:flex-row">
      <ButtonLink href="/dashboard">
        <Link size={18} /> Shorten Your First Link
      </ButtonLink>

      <ButtonLink
        href="https://github.com/NSMichelJ/shorty-link"
        target="_blank"
        class="bg-slate-800 hover:bg-slate-900 dark:bg-slate-800 dark:hover:bg-slate-900"
      >
        <GitHubLogo width={18} height={18} /> Contribute with a Star
      </ButtonLink>
    </div>
  </div>
</Layout>
